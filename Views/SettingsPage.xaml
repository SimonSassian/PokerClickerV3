<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokerClickerV3.SettingsPage"
             Title="SettingsPage">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <!-- Music Toggle -->
        <Switch x:Name="MusicSwitch" IsToggled="True" Toggled="ToggleMusicSwitch_Toggled" Margin="0,10,0,10" />
        <Label Text="Music" HorizontalOptions="Center" />

        <!-- Dark Mode / Light Mode Toggle -->
        <Switch x:Name="DarkModeSwitch" IsToggled="False" Toggled="ToggleDarkModeSwitch_Toggled" Margin="0,10,0,10" />
        <Label Text="Dark Mode" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
